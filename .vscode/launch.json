    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Server Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
           "port": 9229,
           "cwd":"${workspaceFolder}",
           "runtimeExecutable": "npm",
           "runtimeArgs": [
               "run-script",
               "server:debug"
           ]
        },
        {
          "name": "Launch Angular",
          "type": "chrome",
          "request": "launch",
          "preLaunchTask": "npm: client",
          "url": "http://localhost:4230/",
          "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
      {
        "name": "Server Client Both",
        "configurations": ["Server Debug", "Launch Angular"]
      }
    ]
}